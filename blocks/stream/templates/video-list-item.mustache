<div class="pl-0 list-group list-group-flush">
    <div class="card-deck dashboard-card-deck {{$classes}}{{/classes}}" data-region="card-deck" role="list">
    {{#videos}}
        <div class="card dashboard-card" role="listitem"
            data-region="course-content"
            data-course-id="{{{id}}}">
            <a href="#" tabindex="-1">
                <div class="card-img dashboard-card-img {{#status}} renderervideo {{/status}}" style='background-image: url("{{{thumbnail}}}");' data-id="{{videoid}}" data-streamurl="{{path}}" data-title="{{title}}" >
                    <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
                </div>
            </a>
            <div class="card-body pr-1 course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
                <div class="d-flex align-items-start">
                    <div class="w-100 text-truncate">
                    <span class="sr-only">
                            {{#str}}aria:coursename, core_course{{/str}}
                        </span>
                       <h5> {{title}} </h5>
                        <div class="text-muted muted d-flex mb-1 flex-wrap">
                            {{$divider}}{{/divider}}
                            <span class="sr-only">
                                {{#str}}aria:courseshortname, core_course{{/str}}
                            </span>
                            <div>
                                {{#status}}
                                Published on: {{{timecreated}}}
                                {{/status}}
                                {{^status}}
                                Uploaded on: {{{timecreated}}}
                                {{/status}}
                            </div>
                        </div>
                    </div>
                    {{^status}}
                        <div class="ml-auto dropdown">
                            <i class="icon fa fa-clock-o fa-fw " aria-hidden="true"></i>
                            <button class="btn btn-link btn-icon icon-size-3 coursemenubtn"
                                type="button"
                                data-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                                {{#pix}} i/moremenu, core {{/pix}}
                                    <span class="sr-only">
                                        {{#str}} aria:courseactions, block_stream {{/str}} {{{fullname}}}
                                    </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item deleteuploadedvideo"  href="#"
                                    data-action="deletevideo"
                                    data-id="{{ id }}"
                                    aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
                                    >
                                    {{#str}} deletevideo, block_stream {{/str}}
                                    <div class="sr-only">
                                        {{#str}} aria:deletevideo, block_stream {{/str}} {{{fullname}}}
                                    </div>
                                </a>
                            </div>
                        </div>
                {{/status}}
                </div>
            </div>
        </div>
    {{/videos}}
    </div>
</div>

{{#js}}
define('block_stream/deletevideo',
        function(deletevideo) {
    deletevideo.init();

    });
{{/js}}